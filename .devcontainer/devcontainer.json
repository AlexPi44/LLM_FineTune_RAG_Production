{
  "name": "LLM Prod",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers-contrib/features/poetry:2": {
      "version": "1.8.3"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "workspaceFolder": "/workspaces/LLM_FineTune_RAG_Production",
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.cwd": "${workspaceFolder}/LLM-Engineers-Handbook",
        "python.defaultInterpreterPath": "${workspaceFolder}/LLM-Engineers-Handbook/.venv/bin/python"
      }
    }
  }
}
